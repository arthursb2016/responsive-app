  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/node": "^22.5.5",
    "rollup": "^3.29.5",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "magic-string": "^0.30.11"
  }
